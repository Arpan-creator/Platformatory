{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "server",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
